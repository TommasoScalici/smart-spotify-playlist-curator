  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "ES2022",
    "noImplicitAny": true,
    "esModuleInterop": true,
    "rootDir": "src"
  },
  "compileOnSave": true,
  "include": ["src"]
}
