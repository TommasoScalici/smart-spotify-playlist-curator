    "firebase-admin": "^13.6.0",
    "firebase-functions": "^7.0.2",
    "spotify-web-api-node": "^5.0.2",
    "zod": "^4.3.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/jest": "^30.0.0",
    "@types/node": "^25.0.3",
    "@types/spotify-web-api-node": "^5.0.11",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "globals": "^16.5.0",
    "jest": "^30.2.0",
    "prettier": "^3.2.5",
    "ts-jest": "^29.4.6",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.51.0"
