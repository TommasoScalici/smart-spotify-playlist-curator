{
  "name": "smart-spotify-playlist-curator",
  "description": "Firebase Cloud Functions for Smart Spotify Playlist Curator, powering AI-driven playlist generation and management.",
  "scripts": {
    "lint": "eslint .",
    "build": "tsc -p tsconfig.build.json",
    "build:watch": "tsc --watch",
