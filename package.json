{
  "name": "smart-spotify-playlist-curator",
  "version": "1.9.0",
  "description": "A powerful automation system that curates Spotify playlists using **Google Gemini 2.5 Flash** for intelligent song recommendations and **Firebase Cloud Functions** for serverless orchestration.",
  "workspaces": [
    "shared",
    "web-app",
    "functions",
    "scripts"
  ],
  "main": "index.js",
  "scripts": {
    "build": "npm run build --workspaces --if-present",
    "dev": "npm run dev --workspace=web-app",
    "deploy": "tsx scripts/src/admin/build.ts && firebase deploy",
    "prepare": "husky",
    "fix": "npm run lint:fix && npm run format",
    "lint": "npm run lint --workspaces --if-present",
    "lint:fix": "npm run lint --workspaces --if-present -- --fix",
    "format": "prettier --write .",
    "type-check": "tsc -b",
    "test": "npm run test --workspaces --if-present",
    "release": "semantic-release"
  },
  "lint-staged": {
    "**/*.{js,ts,tsx,json,md}": [
      "prettier --write"
    ],
    "web-app/**/*.{ts,tsx}": [
      "npm run lint --prefix web-app"
    ],
    "functions/**/*.{ts,js}": [
      "npm run lint --prefix functions --"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/TommasoScalici/smart-spotify-playlist-curator.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "bugs": {
    "url": "https://github.com/TommasoScalici/smart-spotify-playlist-curator/issues"
  },
  "homepage": "https://github.com/TommasoScalici/smart-spotify-playlist-curator#readme",
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/exec": "^7.1.0",
    "@semantic-release/git": "^10.0.1",
    "@types/node": "^25.3.0",
    "eslint": "^10.0.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-perfectionist": "^5.6.0",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.5.0",
    "globals": "^17.3.0",
    "husky": "^9.1.7",
    "jsdom": "^28.1.0",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1",
    "semantic-release": "^25.0.3",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.56.0",
    "vitest": "^4.0.18",
    "@typescript-eslint/eslint-plugin": "^8.56.0",
    "@typescript-eslint/parser": "^8.56.0"
  },
  "overrides": {
    "fast-xml-parser": "5.3.7",
    "minimatch": "10.2.1",
    "eslint-plugin-react-hooks": {
      "eslint": "^10.0.1"
    }
  }
}
