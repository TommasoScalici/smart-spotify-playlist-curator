rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // User Profile & Subcollections
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;

      match /playlists/{playlistId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }

      match /curationPlans/{planId} {
        // Plans are written by Cloud Functions (Admin SDK), clients only read.
        allow read: if request.auth != null && request.auth.uid == userId;
        allow write: if false;
      }
      
      match /secrets/{secretId} {
        // SECURITY: Secrets (refresh tokens) are SERVER-ONLY.
        // Written by Cloud Functions via Admin SDK (bypasses these rules).
        // Clients can only delete (unlink account).
        allow read: if false;
        allow delete: if request.auth != null && request.auth.uid == userId;
      }

      match /logs/{logId} {
        allow read, update: if request.auth != null && request.auth.uid == userId;
      }
    }
  }
}